# ── Azure Credentials ──────────────────────────────────────────
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_SUBSCRIPTION_ID=your-subscription-id

# ── Azure ML ────────────────────────────────────────────────────
AZURE_ML_WORKSPACE=your-workspace-name
AZURE_ML_RESOURCE_GROUP=your-resource-group
# Lookback window in hours for job status checks
AZURE_ML_LOOKBACK_HOURS=24

# ── Azure Monitor ───────────────────────────────────────────────
AZURE_MONITOR_WORKSPACE_ID=your-log-analytics-workspace-id
# Comma-separated resource IDs to monitor
AZURE_MONITOR_RESOURCE_IDS=your-resource-id-1,your-resource-id-2

# ── Jira ────────────────────────────────────────────────────────
JIRA_URL=https://your-org.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=MLPLAT
# Priorities to flag (comma separated)
JIRA_PRIORITY_FILTER=P1,P2,High,Critical

# ── Shell Health Checks ─────────────────────────────────────────
# Comma-separated paths to shell scripts to run
SHELL_CHECK_SCRIPTS=./checks/disk_usage.sh,./checks/service_status.sh

# ── Anthropic / Claude ──────────────────────────────────────────
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-sonnet-4-6

# ── Email Delivery ──────────────────────────────────────────────
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=ml-health-agent@company.com
EMAIL_TO=team@company.com,manager@company.com

# ── Microsoft Teams ─────────────────────────────────────────────
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/...

# ── Scheduler ───────────────────────────────────────────────────
# When to run: "08:00" for daily at 8am, or interval in minutes
SCHEDULE_TIME=08:00
SCHEDULE_TIMEZONE=Australia/Melbourne

# ── Report Output ───────────────────────────────────────────────
REPORT_OUTPUT_DIR=./reports
